 CREATE TABLE ORDER_DETAILS(
ORDER_ID INTEGER PRIMARY KEY,
DELIVERY_DATE DATE, 
CUST_ID INT, 
FOREIGN KEY(CUST_ID) REFERENCES CUSTOMER (ID)
);


SELECT * FROM ORDER_DETAILS;

create table account(
id int primary key, 
name varchar(225) unique,
balance int,
constraint acc_balance_chk check (balance>1000)
);



insert into account(id, name , balance)
values  (2, 'B' , 100000);
select * from account;




-- check default--
create table account1(
id int primary key, 
name varchar(225) unique,
balance int not null default 0
);

insert into account1(id, name)
values  (2, 'B');
insert into account1(id, name)
values  (3, 'C' );
-- add new column--
alter table account1 add interest float not null default 0;

-- modify--
alter table account1 modify interest double not null default 0;
--change column -- rename 
alter table account1 change column interest saving_interest float not null default 0;
-- drop column

alter table  account1 drop column saving_interest ;
desc account;

select * from account1;

-- rename the table --
alter table account1 rename to account_details;
 
