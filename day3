USE TEMP;
CREATE TABLE CUSTOMER(
ID INTEGER PRIMARY KEY,
CNAME VARCHAR(224),
ADDRESS VARCHAR(225),
GENDER CHAR(2),
CITY VARCHAR(222),
PINCODE INTEGER
);
